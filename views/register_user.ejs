<!DOCTYPE html>
<html>

<head>
    <title>User Registration</title>

</head>

<body align="center">
    <h2>User Registration</h2>
    <% if (typeof errors !=='undefined' && errors.length> 0) { %>
        <div style="color: red;">
            <h4>Errors:</h4>
            <ul>
                <% errors.forEach(error=> { %>
                    <li>
                        <%= error.msg %>
                    </li>
                    <% }) %>
            </ul>
        </div>
        <% } %>

            <form action="/user/register" method="POST" enctype="multipart/form-data" align="center">

                <label for="name">Name:</label>
                <input type="text" id="name" name="name" required> <br><br>

                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required> <br><br>

                <label for="password">Password:</label>
                <input type="text" id="password" name="password" required> <br><br>

                <label for="phone">Phone:</label>
                <input type="number" id="phoneno" name="phoneno" required> <br><br>

                <label for="files">Upload Files :</label>
                <input type="file" id="files" name="files" multiple accept=".jpg,.jpeg,.png,.pdf" required> <br><br>

                <button type="submit">Register</button>
            </form>
</body>

</html>